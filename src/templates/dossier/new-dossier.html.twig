{% extends 'base.html.twig' %}

{% block title %}Ajouter un dossier
{% endblock %}

{% block body %}
	<div class="container">
		{% include 'components/connected-as.html.twig' %}

		<nav aria-label="breadcrumb">
			<ol class="breadcrumb">
				<li class="breadcrumb-item">
					<a href="/">Accueil</a>
				</li>
				{% if isAdmin %}
					<li class="breadcrumb-item">
						<a title="Commercial #{{ commercial.id_personne }}" href="/admin/co/{{ commercial.id_personne }}" class="fw-bold">{{ commercial.est_un_particulier ? commercial.nom_famille|upper ~ ' ' ~ commercial.prenom : commercial.nom_entreprise }}</a>
					</li>
				{% endif %}
				<li class="breadcrumb-item">
					<a title="Client #{{ client.id_personne }}" href="/cl/{{ client.id_personne }}" class="fw-bold">{{ client.est_un_particulier ? client.nom_famille|upper ~ ' ' ~ client.prenom : client.nom_entreprise }}</a>
				</li>
				<li class="breadcrumb-item active">Ajouter un dossier</li>
			</ol>
		</nav>

		<h4 class="mb-3">Ajouter un dossier</h4>
		{% if produits|length > 0 %}
			<div class="card">
				<ul class="list-group list-group-flush">
					{% for produit in produits %}
						<li class="list-group-item">
							<h5>{{ produit.nom_produit }}</h5>
							<span class="text-muted fst-italic">{{ produit.description_produit ?? "Ce produit n'a pas de description" }}</span>
							<form method="POST">
								<input type="hidden" name="id_produit" value="{{ produit.id_produit }}">
								<button class="btn btn-primary mt-3">Ajouter ce produit</button>
							</form>
						</li>
					{% endfor %}
				</ul>
			</div>
		{% else %}
			<p class="text-muted fst-italic">Il n'y a aucun produits Ã  afficher</p>
		{% endif %}
	</div>
{% endblock %}
