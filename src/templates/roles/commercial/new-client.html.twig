{% extends 'base.html.twig' %}

{% block title %}Ajouter un client{% endblock %}

{% block body %}
	<div class="container my-5 pt-5">
		{% include 'components/connected-as.html.twig' %}
        <p>{% include 'components/back-link.html.twig' with {'href': '.'} %}</p>

		<h4 class="mb-3">Ajouter un client</h4>
		<p class="alert alert-warning">
			Remarque : aucun des champs ci dessous n'est obligatoire (mais on vous conseille d'au moins mettre le nom et le pr√©nom üòâ)
		</p>
		<p>
			<form method="POST">
				<div
					class="row mb-2">
					<!-- Identit√© -->
					<div class="col">
						<label class="form-label">Civilit√©</label>
						<select name="civilite" class="form-control form-select">
							<option value="" {{ civilite=='' ? 'selected' : '' }}></option>
							<option value="mr" {{ civilite=='mr' ? 'selected' : '' }}>Mr</option>
							<option value="mme" {{ civilite=='mme' ? 'selected' : '' }}>Mme</option>
						</select>
					</div>
					<div class="col">
						<label class="form-label">Pr√©nom</label>
						<input name="prenom" value="{{ prenom }}" type="text" class="form-control"/>
					</div>
					<div class="col">
						<label class="form-label">Nom de famille</label>
						<input name="nom_famille" value="{{ nom_famille }}" type="text" class="form-control"/>
					</div>
				</div>

				<!-- Adresse -->
				<div class="mb-2">
					<label class="form-label">Adresse</label>
					<input name="adresse" value="{{ adresse }}" type="text" class="form-control"/>
				</div>

				<div class="row mb-2">
					<div class="col">
						<label class="form-label">Ville</label>
						<input name="ville" value="{{ ville }}" type="text" class="form-control"/>
					</div>

					<div class="col">
						<label class="form-label">Code postal</label>
						<input name="code_postal" value="{{ code_postal }}" type="text" class="form-control"/>
					</div>

					<div class="col">
						<label class="form-label">Pays</label>
						<input name="pays" value="{{ pays }}" type="text" class="form-control" value="France"/>
					</div>
				</div>

				<!-- T√©l√©phones -->
				<div class="row mb-2">
					<div class="col">
						<label class="form-label">T√©l√©phone 1</label>
						<input name="tel1" value="{{ tel1 }}" type="tel" class="form-control"/>
					</div>

					<div class="col">
						<label class="form-label">T√©l√©phone 2</label>
						<input name="tel2" value="{{ tel2 }}" type="tel" class="form-control"/>
					</div>
				</div>

				<!-- email de contact -->
				<div class="mb-2">
					<label class="form-label">Adresse mail</label>
					<input name="email" value="{{ email }}" type="email" class="form-control"/>
				</div>

				<button class="btn btn-primary mt-3">Cr√©er le client</button>
			</form>
		</p>
	</div>
{% endblock %}
