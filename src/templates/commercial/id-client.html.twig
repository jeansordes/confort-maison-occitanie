{% extends 'base.html.twig' %}

{% block title %}
	Client "{{ client.est_un_particulier ? client.nom_famille|upper ~ ' ' ~ client.prenom : client.nom_entreprise }}"
{% endblock %}

{% block body %}
	<div class="container">
		{% include 'components/connected-as.html.twig' %}

		<nav aria-label="breadcrumb">
			<ol class="breadcrumb">
				<li class="breadcrumb-item">
					<a href="/">Accueil</a>
				</li>
				{% if isAdmin %}
					<li class="breadcrumb-item">
                        <a title="Commercial #{{ commercial.id_personne }}" href="/admin/co/{{ commercial.id_personne }}" class="fw-bold">{{ commercial.est_un_particulier ? commercial.nom_famille|upper ~ ' ' ~ commercial.prenom : commercial.nom_entreprise }}</a>
					</li>
				{% endif %}
                <li title="Client #{{ client.id_personne }}" class="breadcrumb-item active">{{ client.est_un_particulier ? client.nom_famille|upper ~ ' ' ~ client.prenom : client.nom_entreprise }}</li>
			</ol>
		</nav>

		<div class="row g-5">
			<div class="col-12 col-lg-6">
				<h4>Détails du client</h4>
                <form method="POST">
                    {% include 'components/personne-details-inputs.html.twig' with {btnText: 'Modifier ce client', user: client} %}
                </form>
			</div>
			<div class="col-12 col-lg-6">
                <!-- Dossiers -->
				<h4 class="my-3">Dossiers du client "{{ client.est_un_particulier ? client.nom_famille|upper ~ ' ' ~ client.prenom : client.nom_entreprise }}"</h4>
				<p class="text-muted">Client appartenant au commercial "{{ commercial.est_un_particulier ? commercial.nom_famille|upper ~ ' ' ~ commercial.prenom : commercial.nom_entreprise }}"
				</p>
				<a href="{{ currentUrl }}/new-dossier" class="btn btn-primary mb-3">
					<i class="material-icons">add</i>
					Créer un nouveau dossier</a>
				{% if dossiers|length > 0 %}
					<div class="card">
						<ul class="list-group list-group-flush">
							{% for dossier in dossiers %}
								<li class="list-group-item">
									<a class="d-block" href="/d/{{ dossier.id_dossier }}">{{ dossier.nom_produit }}
										(Dossier #{{ dossier.id_dossier }})</a>
									<small class="text-muted" title="{{ dossier.date_creation }}">Créé
										{{ dossier.date_creation|timeago }}</small>
								</li>
							{% endfor %}
						</ul>
					</div>
				{% else %}
					<p class="text-muted fst-italic">Il n'y a aucun dossiers à afficher</p>
				{% endif %}
			</div>
		</div>
	</div>
{% endblock %}
